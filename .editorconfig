# EditorConfig: https://editorconfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Django templates
[*.{html,htm}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2
